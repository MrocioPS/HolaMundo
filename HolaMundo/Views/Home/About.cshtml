@model List<HolaMundo.Models.Pelicula>

@{
    ViewData["Title"] = "Mi lista de pelis :)";
    string nombre = "Rocio";
}
<h1>@ViewData["Title"]</h1>


<h5>@nombre</h5>


<table class="table">

    <thead>
        <tr>
            <th>Título</th>
            <th>Duración</th>
            <th>País</th>
            <th>Lanzamiento</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var pelicula in Model)
        {
   
        <tr>
                <td> @pelicula.Titulo</td>
                <td> @pelicula.Duracion</td>
                <td> @pelicula.Pais</td>
                <td> @pelicula.Publicacion.ToString("dd/MM/yyyy")</td>
               
         </tr>
        }
    </tbody>
</table>
